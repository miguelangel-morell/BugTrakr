@model BugTrakr.Models.MergeModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="Login">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--User Name-->
                <div class="form-group">
                    <label asp-for="@Model.AppUsers.UserName"></label>
                    <input asp-for="@Model.AppUsers.UserName" class="form-control" />
                    <span asp-validation-for="@Model.AppUsers.UserName" class="text-danger"></span>
                </div>

                <!--Password-->
                <div class="form-group">
                    <label asp-for="@Model.AppUserPassword"></label>
                    <input type="password" asp-for="@Model.AppUserPassword" class="form-control" />
                    <span asp-validation-for="@Model.AppUserPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Login" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
