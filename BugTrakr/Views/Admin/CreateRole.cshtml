@model BugTrakr.Models.MergeModel

@{
    ViewData["Title"] = "Create User Role";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="CreateRole">

                <!--Role Name-->
                <div class="form-group">
                    <label asp-for="@Model.RoleName"></label>
                    <input asp-for="@Model.RoleName" class="form-control" />
                    <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
                </div>

                <!--Submit Button-->
                <div class="form-group">
                    <button type="submit" value="CreateUser" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
